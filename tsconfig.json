{
  "extends": "./node_modules/poetic/config/typescript/tsconfig.json",
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ]
}
